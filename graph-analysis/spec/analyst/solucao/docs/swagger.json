{
    "swagger": "2.0",
    "info": {
        "description": "Documentação da API que responde perguntas analíticas sobre COVID-19 e vacinas",
        "title": "API de Análise COVID-19",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/covid-stats": {
            "get": {
                "description": "Retorna o total acumulado de casos e mortes por COVID-19 em um país e data específicos",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "covid"
                ],
                "summary": "Total de casos e mortes",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Código ISO3 do país",
                        "name": "iso3",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Data no formato YYYY-MM-DD",
                        "name": "date",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.CovidStatsResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/vaccinated": {
            "get": {
                "description": "Retorna o total de vacinas aplicadas por país e data",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "vaccination"
                ],
                "summary": "Total de vacinados",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Código ISO3 do país",
                        "name": "iso3",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Data no formato YYYY-MM-DD",
                        "name": "date",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "integer"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.CovidStatsResponse": {
            "type": "object",
            "properties": {
                "total_cases": {
                    "type": "integer"
                },
                "total_deaths": {
                    "type": "integer"
                }
            }
        }
    }
}